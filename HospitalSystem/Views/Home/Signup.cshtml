@{
    ViewData["Title"] = "Sign Up Page";

}

<div class="signup-area">
    <section class="signup_section layout-padding-bottom">
        <div class="container">

            <div class="row">
                <div class="col-md-7">
                    <div class="form-container">
                        <form id="SignUp" action="PatientIndex.html" method="get" onsubmit="signup()">

                            <div>
                                <label for="user">Username:</label>
                                <input type="text" id="name" placeholder="Full Name" />
                            </div>
                            <div>
                                <label for="user">Email:</label>
                                <input type="email" id="email" placeholder="Email" />
                            </div>
                            <div>
                                <label for="user">Phone Number:</label>
                                <input type="text" id="phoneNum" placeholder="Phone Number" />
                            </div>
                            <div>
                                <label for="user">Password:</label>
                                <input type="password" id="password" placeholder="Password" />
                            </div>
                            <div>
                                <label for="user">Confirm Password:</label>
                                <input type="password" id="comfirmPass" placeholder="Confirm Password" />
                            </div>
                            <div>

                                <label for="user">Genger:</label>
                                <select name="gender" id="gender">
                                    <option disabled selected>Select your gender</option>
                                    <option value="female">Female</option>
                                    <option value="male">Male</option>
                                </select>
                            </div>

                            <div class="btn-box">
                                <button type="submit">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!--<div class="col-md-5">
                    <div class="img-box">
                        <img src="images/signup.jpg" alt="">
                    </div>
                </div>-->
            </div>
        </div>
    </section>
</div>

